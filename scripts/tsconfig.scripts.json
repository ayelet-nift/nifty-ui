{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/scripts",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": false
  },
  "include": [
    "./*.ts",
    "./types/**/*.d.ts",
    "../tailwind.config.ts"
  ]
}
